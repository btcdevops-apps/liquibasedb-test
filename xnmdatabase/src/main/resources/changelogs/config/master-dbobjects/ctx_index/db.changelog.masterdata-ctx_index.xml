        <!--<sql>call xnm_drop_index('btc_address_search_index')</sql>
        <sql>call xnm_drop_preference('address_datastore')</sql>
        <sql>call xnm_drop_preference('address_wordlist')</sql>
        <sql>call xnm_drop_preference('address_lexer')</sql>
